package com.list;

import java.util.Comparator;
import java.util.LinkedHashMap;
import java.util.Map.Entry;
import java.util.stream.Collectors;

public class MapSorting {
	public static void main(String[] args) {
		   
//			List<Employee> empList = Arrays.asList(new Employee(1l, "us", "sv"),new Employee(4l, "indi", "mumbi"), new Employee(3l, "u", "bri"));
//			
//			List<Employee> collect = empList.stream().sorted(Comparator.comparing(Employee::getCountry).reversed()).filter(c->c.getCountry().length()>0).collect(Collectors.toList());
	//	
//		   System.out.println(collect);
			
	          Map<String,Integer> map = Map.of(
	        		  "abc",3,
	        		  "cde",4,
	        		  "def", 7
	        		  
	        		  );
			  Map<String, Integer> collect = map.entrySet().stream().sorted(Map.Entry.comparingByKey(Comparator.reverseOrder())).collect(Collectors.toMap(Entry::getKey, Entry::getValue,(oldKey,newKey)->oldKey,LinkedHashMap::new));
			  
		     System.out.println(collect);
	}

}
